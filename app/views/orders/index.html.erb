<div id="index-product">
    <h1>My orders</h1>
    <div class="container">
      <div class="row product-cards-wrapper m-5">
        <% @orders.each do |order| %>
          <% next if order.user_id != current_user.id %>
          <div class="card card-block">
            <%= image_tag("logo.jpg", class: "card-img-top card-img", alt: "")%>
            <h5 class="text-center mt-2"><%= order.product.name %></h5>
            <p class="text-center">Price: $<%= order.product.price %></p>
            <div class="card-btn">
              <a href="<%= order_path(order) %>" class="btn btn-primary col-8 me-2">View Details</a>
              <%= link_to 'Delete',  order_path(order), data: { turbo_method: :delete, turbo_confirm: 'are u sure?' }, class: "btn btn-primary col-4" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
