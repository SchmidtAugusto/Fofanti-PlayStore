<h1>Editar Produto</h1>

<%= simple_form_for @product, url: product_path(@product), method: :patch do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :game_id, collection: @games, label: "Game", value_method: :id %>
  <%= f.button :submit, 'Atualizar Produto' %>
<% end %>
