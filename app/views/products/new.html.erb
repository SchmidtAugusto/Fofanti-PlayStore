<div id="new-product-page">
  <h1>Create a new listing</h1>
  <%= simple_form_for(@product) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :game_id, collection: @games, label: "Game", value_method: :id %>
    <%= f.button :submit, "Create", class: "btn btn-primary w-100 text-center" %>
  <% end %>
</div>
