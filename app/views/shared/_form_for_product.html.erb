<%= simple_form_for(@product) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :game_id, collection: @games, label: "Game", value_method: :title %>
  <%= f.button :submit, request.fullpath == "/products/new" ? "Create" : "Edit", class: "btn btn-primary w-100 text-center" %>
<% end %>
