<div id="index-product">
    <% if current_page?(controller: 'games', action: 'show') %>
      <h1>Items for <%= @game.title %></h1>
    <% else %>
      <h1>All Products</h1>
    <% end %>
    <div class="container">
      <div class="row product-cards-wrapper">
        <% @products.each do |product| %>
          <div>
            <div class="card">
            <%= image_tag("logo.jpg", class: "card-img-top", alt: "")%>
              <div class="card text-center">
                <h5><%= product.name %></h5>
                <a href="<%= product_path(product) %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
